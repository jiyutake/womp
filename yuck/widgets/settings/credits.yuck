(defwidget clinks [text link]
  (box 
    :orientation "h"
    :space-evenly false 
    :class "clinks"
    :spacing 10
    (image 
      :image-width 20
      :path "./assets/icons/linkb.svg")
    (button 
      :onclick "xdg-open ${link}"
      (label 
        :markup "<u>${text}</u>"))))
  
(defvar runimmediately false)
(defwidget ghissues [] 
  (overlay
    (box
      :orientation "v"
      :space-evenly false
      (revealer 
        :reveal runimmediately
        :transition "slidedown"
        :duration 100
        (box 
          :height 55
          ""))
      (box 
        :orientation "h"
        :space-evenly false 
        :class "clinks"
        :spacing 10
        :hexpand true
        (image 
          :image-width 20
          :path "./assets/icons/linkb.svg")
        (button
          :onclick "xdg-open https://github.com/jiyutake/womp/issues"
          (label 
            :markup "<u>Womp GitHub Issues</u>"))))
    (eventbox 
      :valign "start"
      :height 55
      :hexpand true
      :onhover "${EWW_CMD} update runimmediately=true"
      :onhoverlost "${EWW_CMD} update runimmediately=false")))
